            <option value="9">24</option>
            <option value="10">25</option>
            <option value="11">26</option>
            <option value="12">27</option>
            <option value="13">28</option>
            <option value="14">29</option>
            <option value="15">30</option>
            <option value="15">31</option>
          </select>
      </div>

      <div class="col-3">
          <label for="mesEcoActividad" class="from-label">Mes</label>
          <select class="form-select" name="mesEcoActividad" id="mesEcoActividad" required>
            <option selected value="<%= mesEcoActividad%>"><%= mesEcoActividad%></option>
            <option value="Enero">Enero</option>
            <option value="Febrero">Febrero</option>
            <option value="Marzo">Marzo</option>
            <option value="Abril">Abril</option>
            <option value="Mayo">Mayo</option>
            <option value="Junio">Junio</option>
            <option value="Julio">Julio</option>
            <option value="Agosto">Agosto</option>
            <option value="Septiembre">Septiembre</option>
            <option value="Octubre">Octubre</option>
            <option value="Noviembre">Noviembre</option>
            <option value="Diciembre">Diciembre</option>
          </select>
      </div>

      <div class="col-2">
          <label for="anoEcoActividad" class="from-label">AÃ±o</label>
          <select class="form-select" name="anoEcoActividad" id="anoEcoActividad" required>
            <option selected value="<%= anoEcoActividad%>"><%= anoEcoActividad%></option>
            <option value="2022">2022</option>
            <option value="2023">2023</option>
            <option value="2024">2024</option>
          </select>
      </div>

      <div class="col-3">
          <label for="horaInicioEcoActividad" class="from-label">Hora de inicio de la Eco-Actividad</label>
          <input type="time" class="form-control" name="horaInicioEcoActividad" id="horaInicioEcoActividad" value="<%= horaInicioEcoActividad%>" required>
      </div>
      
      <div class="col-3">
          <label for="horaFinEcoActividad" class="from-label">Hora de fin de la Eco-Actividad</label>
          <input type="time" class="form-control" name="horaFinEcoActividad" id="horaFinEcoActividad" value="<%= horaFinEcoActividad%>" required>
      </div>

      <div class="col-6">
          <label for="ubicacionEcoActividad" class="from-label">Ubicacion</label>
          <input type="text" class="form-control" name="ubicacionEcoActividad" id="ubicacionEcoActividad" value="<%= ubicacionEcoActividad%>" required>
      </div>

      <div class="col-6 mb-3">
          <label for="departamentoEcoActividad" class="from-label">Departamento</label>
          <select class="form-select" name="departamentoEcoActividad" id="departamentoEcoActividad" required>
            <option selected value="<%= departamentoEcoActividad%>"><%= departamentoEcoActividad%></option>
            <option value="Santa Catalina">Santa Catalina</option>
            <option value="Rinconada">Rinconada</option>
            <option value="Cochinoca">Cochinoca</option>
            <option value="Humahuaca">Humahuaca</option>
            <option value="Susques">Susques</option>
            <option value="Tumbaya">Tumbaya</option>
