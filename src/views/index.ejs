<body>
    
    <%- include('partials/navigation.ejs') %>
    <div class="log-in-toast" id="btn-abiri-popup">
        <a href="#" id="btn-abiri-popup"> <img class="imglogoperfil" src="../../img/logoperfil.png"alt="logoperfil"></a>
    </div>

    <div class="bienvenida">
