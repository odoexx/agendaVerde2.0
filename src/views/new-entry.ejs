<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/header.ejs') %>
    <link rel="stylesheet" href="../style/new-entry.css">
    <title>Nueva Eco-Actividad</title>
</head>
<body>

    <%- include('partials/navigation.ejs') %>

    <div class="container p-4">
        <form method="POST" action="/new-entry">
            <div class="form-group">
                <label for="titulo">Titulo</label>
                <input type="text" class="form-control" name="titulo" id="titulo" placeholder="ingresa un nuevo titulo" autofocus required>
            </div>
            <div class="form-group">
                <label for="autor">Autor</label>
                <input type="text" class="form-control" name="autor" id="autor" placeholder="ingresa el autor" required>
            </div>
            <div class="form-group">
                <label for="imagen">Imagen</label>
                <input type="text" class="form-control" name="imagen" id="imagen" placeholder="ingresa una umagen" required>
            </div>
            <div class="form-group">
                <label for="descripcion">Descripcion</label>
                <textarea name="descripcion" id="descripcion" rows="2" class="from-control" required></textarea>
            </div>
            <!-- <div class="form-group">
                <input name="estado" id="estado" rows="2" class="estado" placeholder="pendiente"></input>
            </div> -->
            <input type="submit" value="Guardar" class="btn btn-primary">
        </form>
    </div>
</body>
</html>